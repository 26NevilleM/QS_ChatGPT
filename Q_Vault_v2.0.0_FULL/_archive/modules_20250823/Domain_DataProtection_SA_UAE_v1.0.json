  "playbooks": {
    "breach_response": {
      "id": "DP-PB-001",
      "title": "Personal Data Breach \u2014 First 72 Hours",
      "steps": [
        "T+0: Triage & contain; open incident ticket.",
        "T+4h: Identify data categories/volume; assess risk.",
        "T+24h: Convene exec/legal; draft regulator notification (jurisdiction-specific).",
        "T+48h: Prepare data subject notice if required.",
        "T+72h: Submit notifications; start lessons-learned & corrective actions."
      ],
      "artifacts": [
        "Breach_Report_Template.md",
        "Notification_Draft.docx"
      ]
    },
    "dppa_vendor_onboarding": {
      "id": "DP-PB-002",
      "title": "Vendor Privacy/DPA Onboarding",
      "steps": [
        "Classify vendor (processor vs. controller).",
        "Assess cross-border transfers & safeguards.",
        "Execute DPA with SCCs/BCRs as applicable.",
        "Record vendor in ROPA; set review date."
      ],
      "artifacts": [
        "DPA_Template.docx",
        "Transfer_Assessment.xlsx"
      ]
    }
