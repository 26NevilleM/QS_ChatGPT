  "checklists": {
    "HR": [
      "Verify lawful basis for HR data (contract/legal obligation)",
      "Employee privacy notice issued and acknowledged",
      "Cross-border transfer mechanism for payroll/benefits vendors",
      "Retention & deletion policy applied to leavers"
    ],
    "Clinical": [
      "Patient consent/justification logged (special category)",
      "Role-based access controls in EMR",
      "Secure messaging & encryption for reports",
      "Medical device telemetry de-identified where feasible"
